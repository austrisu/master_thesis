@Article{105-goose-security,
  author   = {Sidhu, Tarlochan S. and Yin, Yujie},
  journal  = {IEEE Transactions on Power Delivery},
  title    = {Modelling and Simulation for Performance Evaluation of IEC61850-Based Substation Communication Systems},
  year     = {2007},
  issn     = {1937-4208},
