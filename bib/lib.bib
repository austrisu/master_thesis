  keywords  = {professional aspects;security of data;active learning;cyber defence exercises;exercise format;general exercise life cycle;cyber threats;skilled cybersecurity professionals;cyber range;complex hands-on defence exercises;Computer security;Monitoring;Servers;Training;Network topology},
}

@Article{48-red-tee-ics-testbed,
  author        = {Vincenzo Giuliano and Valerio Formicola},
  journal       = {CoRR},
